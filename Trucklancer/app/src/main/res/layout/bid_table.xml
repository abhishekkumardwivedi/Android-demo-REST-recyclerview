<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*" android:stretchColumns="*"
            android:background="#ffffff">

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textSize="18dp" android:text="Bids"
                    android:textStyle="bold"
                    android:layout_span="2"
                    android:padding="18dip"
                    android:textColor="#000"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:textSize="14dp" android:text="[20000/3]"
                    android:textStyle="bold"
                    android:padding="10dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="#000"/>


        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee9e9"/>

        <TableRow
                android:id="@+id/tableRow1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <TextView
                    android:id="@+id/TL1" android:text="Stephen"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

            <TextView
                    android:id="@+id/TL2" android:text="11/07/2016"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

            <TextView
                    android:id="@+id/TL3" android:text="Rs 19000"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <TextView
                    android:text="John"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

            <TextView
                    android:text="16/07/2016"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

            <TextView
                    android:text="Rs 55000"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>
        </TableRow>
        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <TextView
                    android:text="Parakh"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

            <TextView
                    android:text="15/07/2016"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>

            <TextView
                    android:text="Rs 43000"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="20dip" android:gravity="center"/>
        </TableRow>
    </TableLayout>
</LinearLayout>